// Pick a random description
let randomDescription = descriptions[Math.floor(Math.random() * descriptions.length)];
let tokens = canvas.tokens.controlled;

if (tokens.length === 0) {
    ui.notifications.warn("No tokens selected.");
    return;
}

// Random token selection
let randomToken = tokens[Math.floor(Math.random() * tokens.length)];

/**
 * Build token HTML with conditional naming:
 * - PCs: always show their name.
 * - NPCs: show "????" to players, but full name for GMs.
 */
function buildTokenHTML(token) {
    let actor = token.document.actor;
    let isPC = actor.hasPlayerOwner;
    let name;

    if (isPC) {
        name = token.name;
    } else {
        // GM sees real name, players see ????
        name = game.user.isGM ? token.name : "????";
    }

    return `<span style="display:inline-flex; align-items:center; margin:2px;">
        <img src="${token.document.texture.src}" width="50" height="50" 
             style="border: 1px solid #000; border-radius: 4px; margin-right:4px;" 
             data-token-id="${token.id}">
        <span style="font-size:12px; font-weight:bold; color:#000;">${name}</span>
    </span>`;
}

let tokenImages = tokens.map(t => buildTokenHTML(t));

// Initial chat card
ChatMessage.create({
    content: `<div style="background: linear-gradient(to bottom, #e6ccff, #ffcc99); padding: 8px; border-radius: 4px; box-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);">
        <p style="font-size: 13px; font-weight: bold; color: #000000; margin-bottom: 4px;">${randomDescription}</p>
        <br>
        <p style="font-size: 13px; color: #000000; margin-bottom: 4px;"><b>Selected tokens:</b></p>
        <p>${tokenImages.join(" ")}</p>
    </div>`,
    speaker: { alias: "Fate" }
});

// Reveal after delay
setTimeout(function () {
    let chosenHTML = buildTokenHTML(randomToken);

    ChatMessage.create({
        content: `<div style="background: linear-gradient(to bottom, #e6ccff, #ffcc99); padding: 8px; border-radius: 4px; box-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);">
            <p style="font-size: 13px; color: #000000; margin-bottom: 4px;"><b>The chosen is:</b></p>
            <p>${chosenHTML}</p>
        </div>`,
        speaker: { alias: "Fate" }
    });
}, 500);

// Handle clicking on token images in chat
Hooks.on('renderChatMessage', (app, html, data) => {
    html.find('img[data-token-id]').on('click', ev => {
        let tokenId = ev.currentTarget.dataset.tokenId;
        let token = canvas.tokens.get(tokenId);
        if (token) {
            canvas.animatePan({ x: token.x, y: token.y, scale: 1.5 });
            token.control({ releaseOthers: true });
            canvas.ping(token.center);
        }
    });
});
